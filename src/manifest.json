			"css":[
				"css/animacoes.css",
				"css/cores.css",
				"css/icones.css",
				"css/informacoes.css"
			],
			"js":[
				"publicas/definicoes.js",
				"publicas/relatar.js",
				"publicas/dom.js",
				"publicas/gerais.js",
				"publicas/navegador.js",
				"iniciar.js",
				"ad-hoc.js",
				"pje/api.js",
				"pje/pje.js"
			],
			"all_frames":					true,
			"match_about_blank":	true,
			"run_at":							"document_end"
		}
	],

	"permissions":[
		"<all_urls>",
		"activeTab",
		"clipboardRead",
		"clipboardWrite",
		"contextMenus",
		"storage",
		"tabs",
		"notifications",
